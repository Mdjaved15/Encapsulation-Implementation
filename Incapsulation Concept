class BankAccount {
    private String name;
    private String accountNumber;
    private String username;
    private String password;
    private double balance;

    public BankAccount(String name, String accountNumber, String username, String password, double balance) {
        this.name = name;
        this.accountNumber = accountNumber;
        this.username = username;
        this.password = password;
        this.balance = balance;
    }

    public String getUsername() {
        return username;
    }

    public boolean verifyLogin(String inputPassword) {
        return this.password.equals(inputPassword);
    }

    public String getName() {
        return name;
    }

    public double getBalance() {
        return balance;
    }

    public void deposit(double amount) {
        if (amount > 0) {
            balance += amount;
            System.out.println("âœ… Deposited â‚¹" + amount);
        } else {
            System.out.println("âŒ Invalid deposit amount.");
        }
    }

    public void withdraw(double amount) {
        if (amount > 0 && balance >= amount) {
            balance -= amount;
            System.out.println("âœ… Withdrew â‚¹" + amount);
        } else {
            System.out.println("âŒ Invalid or insufficient balance.");
        }
    }

    public void showDetails() {
        System.out.println("ğŸ‘¤ Name: " + name);
        System.out.println("ğŸ¦ Account Number: " + accountNumber);
        System.out.println("ğŸ’° Balance: â‚¹" + balance);
    }
}
import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        List<BankAccount> accounts = new ArrayList<>();
        accounts.add(new BankAccount("Md Javed", "12345", "javed", "pass123", 1000));
        accounts.add(new BankAccount("Anjali Sharma", "67890", "anjali", "pass456", 1500));
        accounts.add(new BankAccount("Ravi Kumar", "11111", "ravi", "pass789", 2000));
        accounts.add(new BankAccount("Neha Singh", "54321", "neha", "pass321", 2500));
        accounts.add(new BankAccount("Aman Verma", "99999", "aman", "pass999", 3000));
        accounts.add(new BankAccount("Priya Das", "88888", "priya", "pass888", 3500));

        System.out.print("ğŸ‘¤ Enter username: ");
        String username = sc.nextLine();

        System.out.print("ğŸ”’ Enter password: ");
        String password = sc.nextLine();

        BankAccount loggedInAccount = null;

        // Authenticate
        for (BankAccount acc : accounts) {
            if (acc.getUsername().equals(username) && acc.verifyLogin(password)) {
                loggedInAccount = acc;
                break;
            }
        }

        if (loggedInAccount != null) {
            System.out.println("\nâœ… Login successful! Welcome, " + loggedInAccount.getName());
            loggedInAccount.showDetails();

            System.out.print("\nğŸ’µ Enter deposit amount: ");
            double dep = sc.nextDouble();
            loggedInAccount.deposit(dep);

            System.out.print("ğŸ’¸ Enter withdrawal amount: ");
            double with = sc.nextDouble();
            loggedInAccount.withdraw(with);

            System.out.println("ğŸ“Š Updated Balance: â‚¹" + loggedInAccount.getBalance());
        } else {
            System.out.println("\nâŒ Login failed. Invalid username or password.");
        }

        sc.close();
    }
}
